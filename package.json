{
  "name": "blog-microservices-testing-nodejs-typescript",
  "version": "1.0.0",
  "description": "Examples for the corresponding blog post.",
  "main": "dist/Server.js",
  "scripts": {
    "start": "node dist/Server.js",
    "build": "npm run ts:build && npm run ts:lint",
    "serve": "cross-env NODE_ENV=int DATABASE_ID=\"blog\" nodemon dist/Server.js",
    "serve-sim": "cross-env NODE_ENV=test DATABASE_ID=\"blog\" nodemon dist/Server.js",
    "ts:build": "rimraf dist && tsc -p tsconfig.build.json",
    "ts:watch": "tsc -w -p tsconfig.build.json",
    "ts:lint": "tslint -c tslint.json -p tsconfig.build.json 'src/**/*.ts' && tslint -c test/tslint.json -p tsconfig.json 'test/**/*.ts'",
    "ts:doc": "typedoc --out docs/ --mode file --excludeExternals --module commonjs --target ES6 --tsconfig tsconfig.build.json --readme none",
    "test": "npm run test:unit && npm run test:int",
    "test:unit": "cross-env NODE_ENV=test nyc mocha \"test/unit/**/*.spec.ts\" --opts ./mocha.opts",
    "test:int": "cross-env NODE_ENV=test mocha \"test/int/**/*.spec.ts\" --opts ./mocha.opts --timeout 10000",
    "test:contract": "cross-env NODE_ENV=test mocha \"test/contract/**/*.spec.ts\" --opts ./mocha.opts --timeout 10000",
    "simulation": "node -r ts-node/register test/test-utils/simulation/SimulationServer.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nt-ca-aqe/blog-microservices-testing-nodejs-typescript.git"
  },
  "keywords": [
    "microservice",
    "testing",
    "nodejs",
    "typescript"
  ],
  "author": "Antoniya Atanasova, Janis Koehr",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/nt-ca-aqe/blog-microservices-testing-nodejs-typescript/issues"
  },
  "homepage": "https://github.com/nt-ca-aqe/blog-microservices-testing-nodejs-typescript#readme",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.3",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-http": "^3.0.4",
    "@types/documentdb": "^1.10.4",
    "@types/documentdb-server": "0.0.32",
    "@types/express": "^4.11.1",
    "@types/http-status-codes": "^1.2.0",
    "@types/mocha": "^5.2.0",
    "@types/node": "^9.6.18",
    "@types/request": "^2.47.0",
    "@types/request-promise-native": "^1.0.14",
    "@types/sinon": "^5.0.0",
    "@types/sinon-chai": "^2.7.32",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.0.0",
    "cross-env": "^5.1.6",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "nyc": "^11.8.0",
    "rimraf": "^2.6.2",
    "sinon": "^5.0.10",
    "sinon-chai": "^3.1.0",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.0.5",
    "tslint": "^5.10.0",
    "tslint-language-service": "^0.9.9",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "@pact-foundation/pact": "^5.9.1",
    "body-parser": "^1.18.3",
    "class-transformer": "^0.1.9",
    "class-transformer-validator": "^0.5.0",
    "class-validator": "^0.14.0",
    "documentdb": "^1.14.4",
    "express": "^4.16.3",
    "http-status-codes": "^1.3.0",
    "reflect-metadata": "^0.1.12",
    "request": "^2.87.0",
    "request-promise-native": "^1.0.5"
  }
}
